<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="495.0" prefWidth="567.0" spacing="20.0" styleClass="root-pane" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="orgs.tuasl_clint.controllers.LoginController">
    <padding>
        <Insets bottom="20.0" left="50.0" right="50.0" top="20.0" />
    </padding>

    <Label fx:id="loginMessage" styleClass="title-label" text="Welcome Back!">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <TextField fx:id="usernameField" maxWidth="300" prefHeight="43.0" prefWidth="300.0" promptText="Username or Phone number" />
    <PasswordField fx:id="passwordField" maxWidth="300" prefHeight="43.0" prefWidth="300.0" promptText="Password" />
   <CheckBox fx:id="saveData" mnemonicParsing="false" selected="true" text="Save My Data" />

    <Button fx:id="loginButton" maxHeight="43.0" maxWidth="300" mnemonicParsing="false" onAction="#handleLoginButtonAction" prefHeight="43.0" prefWidth="300.0" styleClass="action-button" text="Login" />
    <Button fx:id="registerButton" maxWidth="300" mnemonicParsing="false" onAction="#handleRegisterButtonAction" prefHeight="43.0" prefWidth="300.0" styleClass="secondary-button" text="Create Account" />
</VBox>
